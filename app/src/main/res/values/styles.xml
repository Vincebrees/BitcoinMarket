<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FilterButton">
        <item name="android:layout_marginStart">@dimen/filter_margin</item>
        <item name="android:layout_marginEnd">@dimen/filter_margin</item>
    </style>
</resources>
